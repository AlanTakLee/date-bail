<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateSummaryImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_cast_on_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholder"
        android:id="@+id/dateSummaryTitleTxt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateSummaryEditImg"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_edit_black_48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/placeholder"
        android:id="@+id/dateSummaryTimeTxt"
        android:layout_below="@+id/dateSummaryTitleTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>