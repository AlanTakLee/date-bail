<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/placeholder"
        android:id="@+id/dateSummaryTitleTxt"
        android:layout_alignTop="@+id/dateSummaryEditImg"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dateSummaryEditImg"
        android:layout_margin="5dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateSummaryEditImg"
        android:minHeight="32dp"
        android:minWidth="32dp"
        android:maxWidth="32dp"
        android:maxHeight="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_edit_black_48dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/placeholder"
        android:id="@+id/dateSummaryTimeTxt"
        android:layout_below="@+id/dateSummaryTitleTxt"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/placeholder"
        android:id="@+id/dateSummaryContactTxt"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:layout_alignTop="@+id/dateSummaryTimeTxt"
        android:layout_alignEnd="@+id/dateSummaryTitleTxt"
        android:layout_toEndOf="@+id/dateSummaryTimeTxt"
        android:maxLines="1"/>

</RelativeLayout>